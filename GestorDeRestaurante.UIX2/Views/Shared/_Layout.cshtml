<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestorDeRestaurante.UIX2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestorDeRestaurante.UIX2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Medida" asp-action="Index"><b><i>Medidas</i></b> </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        
                        <li class="nav-item">
                            <a class="nav-link" style="color:#900C3F";" asp-area="" asp-controller="Ingrediente" asp-action="Index"><b><i>Ingredientes</i></b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#C70039";" asp-area="" asp-controller="PlatilloDelMenu" asp-action="Index"><b><i>Platillos del menú</i></b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#FF5733";" asp-area="" asp-controller="IngredienteDelMenu" asp-action="Index"><b><i>Ingredientes del menú</i></b></a>
                        </li>
                           <li class="nav-item">
                            <a class="nav-link" style="color:#FFC300";" asp-area="" asp-controller="Mesas" asp-action="Index"><b><i>Mesas</i></b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#A6D15B";" asp-area="" asp-controller="Ordenes" asp-action="Index"><b><i>Órdenes</i></b></a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
